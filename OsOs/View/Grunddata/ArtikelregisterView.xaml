                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Artikelregister" Style="{StaticResource PivotHeaderStyleActive}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Click">
                            <core:NavigateToPageAction TargetPage="OsOs.View.Grunddata.ArtikelregisterView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Button>
                <Button Grid.Column="1" Content="Kunder" Style="{StaticResource PivotHeaderStyleInactive}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Click">
                            <core:NavigateToPageAction TargetPage="OsOs.View.Grunddata.KunderView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Button>
                <Button Grid.Column="2" Content="Lagerplads" Style="{StaticResource PivotHeaderStyleInactive}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Click">
                            <core:NavigateToPageAction TargetPage="OsOs.View.Grunddata.LagerpladserView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Button>
                <Button Grid.Column="3" Content="Enheder" Style="{StaticResource PivotHeaderStyleInactive}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Click">
                            <core:NavigateToPageAction TargetPage="OsOs.View.Grunddata.EnhederView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Button>
                <Button Grid.Column="4" Content="Brugere" Style="{StaticResource PivotHeaderStyleInactive}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Click">
                            <core:NavigateToPageAction TargetPage="OsOs.View.Grunddata.BrugereView"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </Button>

            </Grid>
            <Grid BorderThickness="2" BorderBrush="#8BC34A" Grid.Column="1" Grid.Row="2" Background="#fff">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="680"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Artikel Nummer" VerticalAlignment="Center" Margin="20 0"/>


                        <TextBox Grid.Column="1" Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" MaxLength="20"  VerticalAlignment="Center" HorizontalAlignment="Left" Width="300"/>
                        <ToggleButton IsChecked="{Binding ToggleVisibilityProductList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0" Margin="310 0 0 0" Content="Søg" IsThreeState="False"/>

                        <TextBlock Text="Beskrivelse" VerticalAlignment="Center" Margin="20 0" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding ProductDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="300" MaxLength="100"/>

                        <TextBlock Text="Enhed" VerticalAlignment="Center" Margin="20 0" Grid.Column="0" Grid.Row="2"/>
                        <ToggleButton IsChecked="{Binding ToggleVisibilityUnitList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Margin="310 0 0 0" Content="Søg" IsThreeState="False"/>
                        <TextBox Grid.Column="1" Grid.Row="2" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding UnitName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Rectangle Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="32" Fill="#888" Opacity="0.2" Width="300" HorizontalAlignment="Left"/>


                        <TextBlock Text="Stregkode" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="20 0"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ProductBarcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center" MaxLength="15"/>

                        <Button Content="Ok" Command="{Binding SubmitProduct, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20 0" Background="#8BC34A" Foreground="#fff"/>
                        <Button Content="Slet" Command="{Binding OneDeleteButtonToRuleThemAllCommand, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Width="160" Margin="20 0" Background="#8BC34A" Foreground="#fff"/>

                    </Grid>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Page>



